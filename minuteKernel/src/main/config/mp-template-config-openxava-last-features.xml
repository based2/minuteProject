    	name="JPA set"
		libdir="lib/OX_LIB.vm"
		outputdir="src"
		belongToPackage="true">

		<template name="OpenxavaDomainObjectUML" templateFileName="DomainObjectUMLJPAAnnotationOXAnnotationV4.vm" 
			subdir="" outputsubdir="" technicalPackage="domain"
