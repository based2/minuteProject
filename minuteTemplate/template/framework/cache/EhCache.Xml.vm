#exposeVariableModelSpecific()
#exposeModelUpdatedAreas("ehcache-node")
$!updatedAreaBegin
#if($isUpdated)
$!updatedAreaSnippet
#else 
<ehcache>
#end
  <!--
    Sets the path to the directory where cache files are created.

    If the path is a Java System Property it is replaced by its value in the
    running VM.

    The following properties are translated:
    * user.home - User's home directory
    * user.dir - User's current working directory
    * java.io.tmpdir - Default temp file path

    Subdirectories can be specified below the property e.g. java.io.tmpdir/one
    -->
#exposeModelUpdatedAreas("ehcache-main-config")
$!updatedAreaBegin
#if($isUpdated)
$!updatedAreaSnippet
#else  
    <diskStore path="java.io.tmpdir"/>

 <!--
    Mandatory Default Cache configuration. These settings will be applied to caches
    created programmtically using CacheManager.add(String cacheName)
    -->
    <defaultCache
#if($useMaxEntriesLocalHeap)
            maxEntriesLocalHeap="1000"
#else
            maxElementsInMemory="1000"
#end
            eternal="false"
            timeToIdleSeconds="300"
            timeToLiveSeconds="300"
            overflowToDisk="false"
            diskPersistent="false"
            diskExpiryThreadIntervalSeconds="300"
            memoryStoreEvictionPolicy="LRU"
            />
<!-- The unnamed query cache -->
   <cache
    name="org.hibernate.cache.StandardQueryCache"
    maxElementsInMemory="1000"
    eternal="false"
    timeToLiveSeconds="300"
    overflowToDisk="false"
   />
#end
$!updatedAreaEnd

#foreach ($table in ${entities})
#exposeEntityCache()
#if($hasCache)
#exposeJPA2DomainObject($table)
#exposeModelUpdatedAreas("cache-entity-${table.name}")
$!updatedAreaBegin
#if($isUpdated)
$!updatedAreaSnippet
#else
   <cache
    name="$importDomainObjectUML"
#if($useMaxEntriesLocalHeap)
        maxEntriesLocalHeap="5000"
#else
        maxElementsInMemory="5000"
#end
        eternal="false"
        timeToIdleSeconds="300"
        timeToLiveSeconds="600"
        overflowToDisk="false"
   />
#end
$!updatedAreaEnd
#end
#end

#addArea("custom-cache-definition")

</ehcache>
